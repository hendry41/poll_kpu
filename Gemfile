source 'https://rubygems.org'

gem 'rails', '4.0.0' # ruby framework 

gem 'jquery-rails' # framework javascript jquery plugin on rails
gem 'jquery-ui-rails' # ui plug in jquery framework on rails 
gem 'thin' # rails server for runing rails
gem 'pg' # plugin connector to database 
gem 'cancan' # plugin role user 
gem "cocoon" # plugin nested 
gem 'activeadmin', github: 'gregbell/active_admin' # plugin view admin
gem 'carrierwave' # plugin for save image
gem 'mini_magick' # plugin image converter
gem 'devise' # plugin for create system login and signup 


group :assets do
	gem 'sass-rails', '~> 4.0.0' # plugin css for sass file nested css
	gem 'uglifier', '>= 1.3.0' 
	gem 'coffee-rails', '~> 4.0.0' # plugin coffescript convert file to js
end

gem 'jbuilder', '~> 1.2' # plugin Jbuilder gives you a simple DSL for declaring JSON

group :development do
  gem 'debugger'
  gem 'awesome_print'
  gem 'quiet_assets'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'meta_request', '0.2.0'
  gem 'sextant'
end

